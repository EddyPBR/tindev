{
  "name": "tindev-api",
  "version": "0.0.1",
  "description": "Aplicação para localização de desenvolvedores próximos geograficamente",
  "main": "server.js",
  "repository": "https://github.com/EddyPBR/tindev-api.git",
  "contributors": [
    {
      "name": "Edvaldo Junior",
      "email": "edvaldojunior1310@gmail.com",
      "url": "https://github.com/EddyPBR"
    }
  ],
  "license": "MIT",
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prisma": {
    "schema": "./src/databases/schema.prisma"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.5",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.1",
    "@commitlint/config-conventional": "^16.2.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "dotenv": "^16.0.0",
    "dotenv-cli": "^5.0.0",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^7.0.4",
    "prettier": "^2.5.1",
    "ts-node-dev": "^1.1.8",
    "tsconfig-paths": "^3.13.0",
    "typescript": "^4.6.2"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "@types/node": "^17.0.21",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "express": "^4.17.3",
    "express-async-errors": "^3.1.1",
    "prisma": "^3.10.0"
  },
  "scripts": {
    "build": "babel src --extensions \".js,.ts\" --out-dir build --copy-files --no-copy-ignored",
    "start": "cross-env NODE_ENV=production node ./build/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --files --ignore-watch node_modules --no-notify src/server.ts",
    "migrate:dev": "dotenv -e .env.development -- yarn prisma migrate dev --preview-feature",
    "migrate:prod": "dotenv -e .env.production -- yarn prisma migrate dev",
    "lint": "eslint --fix --ext .js,.ts,.json ."
  }
}
